{% extends 'base.html.twig' %}

{% block title %}
	Update book
{% endblock %}

{% block body %}
	<div>
		{{ form_start(form) }}
		<div>
			{{ form_errors(form) }}
		</div>
		<div>
			{{ form_label(form.book_name,'Please enter book name') }}
		</div>
		<div>
			{{ form_widget(form.book_name) }}
		</div>
		<div>
			{{ form_label(form.book_author,'Please enter book author') }}
		</div>
		<div>
			{{ form_widget(form.book_author) }}
		</div>

		<div>
			{{ form_label(form.book_genre,'Please enter book genre') }}
		</div>
		<div>
			{{ form_widget(form.book_genre) }}
		</div>
		<div>
			<button type="submit">Add</button>
		</div>
		{{ form_end(form) }}
	</div>

	<p>
		Home Page
		<a href={{path('app_book')}}>
			<button>
				Back
			</button>
		</a>
	</p>
{% endblock %}
